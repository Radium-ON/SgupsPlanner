<UserControl x:Class="SgupsPlanner.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Views/Settings/Appearance.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="внешний вид" Source="/Views/Settings/Appearance.xaml" />
                <mui:Link DisplayName="помощь" Source="/Views/HelpPage.xaml" />
                <mui:Link DisplayName="об авторе" Source="/Views/Settings/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>